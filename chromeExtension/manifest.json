{
    "manifest_version": 3,
    "name": "FrameTimer",
    "version": "1.0",
    "description": "A simple extension to time frames in a video.",
    "icons": {
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*", "https://youtu.be/*"],
            "js": ["scripts/injectYT.js"],

            "all_frames": true
        },
        {
            "matches": ["https://www.speedrun.com/*"],
            "js": ["scripts/injectSRC.js"],

            "all_frames": true
        }
    ],

    "host_permissions": ["<all_urls>"]
}
